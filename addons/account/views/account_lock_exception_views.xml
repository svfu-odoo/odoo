<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_lock_exception_form" model="ir.ui.view">
            <field name="name">account.lock_exception.form</field>
            <field name="model">account.lock_exception</field>
            <field name="arch" type="xml">
                <form string="Account">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_show_moves_last_modified_during"
                                    type="object" icon="fa-bars">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Journal entries last modified during the exception
                                    </span>
                                </div>
                            </button>
                        </div>
                        <div>
                            <field name="last_modified_move_ids" widget='one2many'/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
